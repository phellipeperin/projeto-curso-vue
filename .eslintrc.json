{
  "extends": [
    "plugin:vue/recommended",
    "@vue/airbnb"
  ],
  "overrides": [
    {
      "files": ["*.vue"],
      "rules": {
        "indent": "off"
      }
    }
  ],
  "rules": {
    "import/no-dynamic-require": 0,
    "linebreak-style": 0,
    "indent": [2, 4],
    "vue/html-indent": [2, 4],
    "vue/script-indent": [2, 4, {
      "baseIndent": 1
    }],

    "vue/singleline-html-element-content-newline": 0,
    "vue/eqeqeq": 2,
    "no-plusplus": 0
  },
  "plugins": [
    "html"
  ]
}
